# MAP GIT COMMANDS THROUGH HUB
alias git=hub

# DIRECTORIES
alias dotfiles='cd ~/.homesick/repos/dotfiles/'
alias vimfiles='cd ~/.homesick/repos/vimfiles/'
alias matefiles='cd ~/Library/Application\ Support/TextMate/'
alias minefiles='cd ~/Library/Preferences/RubyMine30/'
alias desktop='cd ~/Desktop/'
alias sort='cd ~/Desktop/sort/'
alias dox='cd ~/Documents/'
alias work='cd ~/Documents/work/'
alias life='cd ~/Documents/life/'
alias books='cd ~/Documents/life/books/'
alias pix='cd ~/Pictures/'
alias sites='cd ~/Sites/'

# OPEN STUFF
alias termtips='open http://gist.github.com/585169'

# ENVIRONMENTS
alias node-repl="rlwrap node-repl"

# BROWSERS
alias safari='open -a Safari'
alias firefox='open -a FireFox'
alias chrome='open -a Google\ Chrome'

# MISC
alias reload="source ~/.bash_profile"
alias cp='cp -i'
alias mv='mv -i'
alias ls='ls -G'
alias ll='ls -lA'
alias lls='ls -lAS'
alias ..='cd ..'
alias hi='history | tail -50'
alias ftail='tail -f ~/Library/Preferences/Macromedia/Flash\ Player/Logs/flashlog.txt'

# Rails
alias railss='rails s thin'
alias migrate='rake db:migrate'
